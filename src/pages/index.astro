---
// src/pages/index.astro
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import TechShowcase from "../components/TechShowcase.astro";
import Features from "../components/Features.astro";
import Newsletter from "../components/Newsletter.jsx";
import TablaCorreos from "../components/TablaCorreos.jsx";
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Meridian Core | Automatización Inteligente</title>
	</head>
	<body class="bg-slate-50 min-h-screen flex flex-col font-sans">
		<header>
			<Navbar />
		</header>

		<Hero />

		<section class="py-10 px-4 border-b border-slate-200">
			<TechShowcase />
		</section>

		<section class="py-20 px-4 relative overflow-hidden">
			<Features />
			<div class="text-center mt-8">
				<a
					href="/features"
					class="inline-flex items-center gap-2 text-blue-600 font-bold hover:text-blue-800 transition"
				>
					Ver especificaciones técnicas completas
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="16"
						height="16"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"
						></path></svg
					>
				</a>
			</div>
		</section>

		<section class="py-20 px-4 bg-slate-900 text-slate-300">
			<div class="max-w-4xl mx-auto text-center mb-10">
				<span
					class="text-blue-400 font-bold tracking-wider text-sm uppercase"
					>Demo Interactiva</span
				>
				<h2 class="text-3xl font-bold text-white mt-2 mb-4">
					Transparencia de Datos en Tiempo Real
				</h2>
				<p class="max-w-2xl mx-auto">
					Esta tabla no es estática. Se alimenta directamente de
					nuestro flujo de n8n cada vez que alguien interactúa con el
					sistema.
				</p>
			</div>

			<div class="bg-white rounded-xl overflow-hidden shadow-2xl">
				<TablaCorreos client:visible />
			</div>
		</section>

		<section class="py-24 px-4 bg-gradient-to-b from-slate-50 to-white">
			<div
				class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-center"
			>
				<div>
					<h2 class="text-3xl font-bold text-slate-900 mb-4">
						¿Listo para empezar?
					</h2>
					<p class="text-slate-600 mb-8">
						Únete a la lista de espera para recibir actualizaciones
						o contáctanos directamente para un proyecto a medida.
					</p>
					<a
						href="/contact"
						class="px-6 py-3 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 transition shadow-lg shadow-blue-600/20"
					>
						Agendar Consulta
					</a>
				</div>
				<div
					class="bg-white p-1 rounded-2xl shadow-xl border border-slate-100"
				>
					<Newsletter client:visible />
				</div>
			</div>
		</section>

		<footer
			class="bg-slate-900 py-12 text-center text-slate-500 text-sm border-t border-slate-800"
		>
			<p>&copy; 2025 Meridian Core. Arquitectura & Automatización.</p>
			<div class="flex justify-center gap-4 mt-4">
				<a
					href="/status"
					class="hover:text-green-400 transition flex items-center gap-2"
				>
					<span
						class="w-2 h-2 rounded-full bg-green-500 animate-pulse"
					></span>
					System Status
				</a>
			</div>
		</footer>
	</body>
</html>
