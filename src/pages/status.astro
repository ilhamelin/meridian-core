---
// src/pages/status.astro
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>Estado del Sistema | Meridian Core</title>
    </head>
    <body class="bg-slate-50 min-h-screen flex flex-col font-sans">
        <Navbar />

        <main class="flex-1 max-w-3xl w-full mx-auto px-6 py-12">
            <div class="mb-12 text-center">
                <h1 class="text-3xl font-bold text-slate-900 mb-2">
                    Estado del Sistema
                </h1>
                <p class="text-slate-500">
                    Monitoreo en tiempo real de nuestros servicios de
                    automatización.
                </p>
            </div>

            <div
                id="global-status-card"
                class="bg-white p-8 rounded-2xl shadow-sm border border-slate-200 mb-8 flex items-center justify-between animate-pulse"
            >
                <div class="flex items-center gap-4">
                    <div
                        id="global-icon"
                        class="w-12 h-12 rounded-full bg-slate-200 flex items-center justify-center"
                    >
                        <svg
                            class="w-6 h-6 text-slate-400"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <h2
                            id="global-title"
                            class="text-xl font-bold text-slate-900"
                        >
                            Comprobando sistema...
                        </h2>
                        <p id="last-updated" class="text-sm text-slate-400">
                            Iniciando diagnóstico
                        </p>
                    </div>
                </div>
            </div>

            <div
                class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden"
            >
                <div
                    class="px-6 py-4 border-b border-slate-100 bg-slate-50/50 flex justify-between items-center"
                >
                    <h3 class="font-semibold text-slate-700">
                        Servicios Individuales
                    </h3>
                    <span
                        class="text-xs font-mono text-slate-400 bg-slate-100 px-2 py-1 rounded"
                        >uptime-check</span
                    >
                </div>

                <div id="services-list" class="divide-y divide-slate-100">
                    <div class="p-6 text-center text-slate-400 italic">
                        Cargando métricas...
                    </div>
                </div>
            </div>
        </main>

        <footer class="py-8 text-center text-slate-400 text-sm">
            <p>&copy; 2025 Meridian Core. Powered by Astro & n8n.</p>
        </footer>

        <script>
            // 1. DEFINICIÓN DE TIPOS (Interfaces)
            // Esto soluciona el error de "parameter 'service' has an 'any' type"
            interface Service {
                name: string;
                status: "operational" | "degraded" | "down"; // Tipado estricto de estados
                latency: string;
            }

            interface StatusResponse {
                status: string;
                last_updated: string;
                services: Service[];
            }

            // ⚠️ TU URL DEL WEBHOOK DE N8N
            const STATUS_API_URL =
                "http://localhost:5678/webhook/system-status";

            async function fetchStatus() {
                // Obtenemos los elementos. TypeScript infiere que son HTMLElement | null
                const globalCard =
                    document.getElementById("global-status-card");
                const globalTitle = document.getElementById("global-title");
                const globalIcon = document.getElementById("global-icon");
                const lastUpdated = document.getElementById("last-updated");
                const servicesList = document.getElementById("services-list");

                // 2. CLÁUSULA DE GUARDIA (Guard Clause)
                // Esto soluciona el error de "is possibly 'null'".
                // Si falta CUALQUIERA de los elementos, detenemos la función aquí.
                if (
                    !globalCard ||
                    !globalTitle ||
                    !globalIcon ||
                    !lastUpdated ||
                    !servicesList
                ) {
                    console.error(
                        "Error crítico: Elementos del DOM no encontrados en /status",
                    );
                    return;
                }

                try {
                    const response = await fetch(STATUS_API_URL);
                    if (!response.ok) throw new Error("Network error");

                    // Le decimos a TS que 'data' cumple con la interfaz StatusResponse
                    const data = (await response.json()) as StatusResponse;

                    // 1. Actualizar Estado Global
                    globalCard.classList.remove("animate-pulse");

                    if (data.status === "operational") {
                        globalTitle.textContent =
                            "Todos los sistemas operativos";
                        globalTitle.classList.add("text-green-700");
                        globalIcon.className =
                            "w-12 h-12 rounded-full bg-green-100 flex items-center justify-center";
                        globalIcon.innerHTML = `<svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>`;
                    } else {
                        globalTitle.textContent =
                            "Degradación de servicio detectada";
                        globalTitle.classList.add("text-yellow-700");
                        globalIcon.className =
                            "w-12 h-12 rounded-full bg-yellow-100 flex items-center justify-center";
                        globalIcon.innerHTML = `<svg class="w-6 h-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>`;
                    }

                    const date = new Date(data.last_updated);
                    lastUpdated.textContent = `Última comprobación: ${date.toLocaleTimeString()}`;

                    // 2. Renderizar Servicios
                    // Ahora 'service' tiene tipo automático gracias a la interfaz Service definida arriba
                    servicesList.innerHTML = data.services
                        .map(
                            (service) => `
        <div class="px-6 py-4 flex items-center justify-between hover:bg-slate-50 transition-colors">
            <div class="flex items-center gap-3">
                <div class="relative flex h-3 w-3">
                  <span class="${service.status === "operational" ? "bg-green-400" : "bg-red-400"} animate-ping absolute inline-flex h-full w-full rounded-full opacity-75"></span>
                  <span class="${service.status === "operational" ? "bg-green-500" : "bg-red-500"} relative inline-flex rounded-full h-3 w-3"></span>
                </div>
                <span class="font-medium text-slate-700">${service.name}</span>
            </div>
            <div class="flex items-center gap-4">
                <span class="text-xs font-mono text-slate-400">${service.latency}</span>
                <span class="px-2 py-1 rounded-full text-xs font-bold ${
                    service.status === "operational"
                        ? "bg-green-100 text-green-700"
                        : "bg-red-100 text-red-700"
                }">
                    ${service.status === "operational" ? "OPERATIVO" : "ERROR"}
                </span>
            </div>
        </div>
      `,
                        )
                        .join("");
                } catch (error) {
                    console.error(error);
                    // Aquí también usamos las variables, pero como pasaron el "Guard Clause", TS sabe que no son nulas.
                    globalCard.classList.remove("animate-pulse");
                    globalTitle.textContent =
                        "No se pudo conectar con el monitor";
                    globalTitle.classList.add("text-red-600");
                    servicesList.innerHTML = `<div class="p-6 text-center text-red-400">Error de conexión con n8n. Verifica que el Webhook esté activo.</div>`;
                }
            }

            fetchStatus();
        </script>
    </body>
</html>
