---
// src/pages/status.astro
import Layout from "../layouts/Layout.astro";
---

<Layout
    title="Estado del Sistema | Meridian Core"
    description="Monitor de salud de servicios y APIs en tiempo real."
>
    <main class="flex-1 max-w-3xl w-full mx-auto px-6 py-12">
        <div class="mb-8 text-center">
            <h1 class="text-3xl font-bold text-slate-900 mb-2">
                Estado del Sistema
            </h1>
            <p class="text-slate-500">
                Monitoreo de infraestructura y servicios de automatización.
            </p>
        </div>

        <div
            class="bg-white p-4 rounded-xl shadow-sm border border-slate-200 mb-8 flex flex-col sm:flex-row justify-between items-center gap-4"
        >
            <div class="flex items-center gap-3">
                <span class="text-sm font-medium text-slate-600"
                    >Modo Manual</span
                >

                <label class="relative inline-flex items-center cursor-pointer">
                    <input
                        type="checkbox"
                        id="auto-switch"
                        class="sr-only peer"
                    />
                    <div
                        class="w-11 h-6 bg-slate-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-100 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"
                    >
                    </div>
                </label>

                <span
                    class="text-sm font-medium text-slate-600 flex items-center gap-1"
                >
                    Automático
                    <span
                        class="text-xs text-blue-500 font-bold bg-blue-50 px-1.5 py-0.5 rounded hidden peer-checked:inline-block"
                        id="auto-badge">10s</span
                    >
                </span>
            </div>

            <button
                id="refresh-btn"
                class="flex items-center gap-2 px-4 py-2 bg-slate-900 text-white rounded-lg text-sm font-bold hover:bg-slate-800 transition disabled:opacity-50 disabled:cursor-not-allowed shadow-sm"
            >
                <svg
                    id="refresh-icon"
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path
                        d="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"
                    ></path><path d="M3 3v5h5"></path><path
                        d="M3 12a9 9 0 0 0 9 9 9.75 9.75 0 0 0 6.74-2.74L21 16"
                    ></path><path d="M16 16h5v5"></path></svg
                >
                <span>Actualizar Ahora</span>
            </button>
        </div>

        <div
            id="global-status-card"
            class="bg-white p-8 rounded-2xl shadow-sm border border-slate-200 mb-8 flex items-center justify-between transition-all duration-300"
        >
            <div class="flex items-center gap-4">
                <div
                    id="global-icon"
                    class="w-12 h-12 rounded-full bg-slate-100 flex items-center justify-center transition-colors duration-300"
                >
                    <svg
                        class="w-6 h-6 text-slate-400"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                        ></path>
                    </svg>
                </div>
                <div>
                    <h2
                        id="global-title"
                        class="text-xl font-bold text-slate-900"
                    >
                        Esperando datos...
                    </h2>
                    <p id="last-updated" class="text-sm text-slate-400">
                        Iniciando conexión
                    </p>
                </div>
            </div>
        </div>

        <div
            class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden"
        >
            <div
                class="px-6 py-4 border-b border-slate-100 bg-slate-50/50 flex justify-between items-center"
            >
                <h3 class="font-semibold text-slate-700">
                    Servicios Individuales
                </h3>
                <span
                    class="text-xs font-mono text-slate-400 bg-slate-100 px-2 py-1 rounded"
                    >uptime-check</span
                >
            </div>

            <div id="services-list" class="divide-y divide-slate-100">
                <div class="p-6 text-center text-slate-400 italic">
                    Conectando con n8n...
                </div>
            </div>
        </div>
    </main>

    <script>
        // --- 1. Definición de Tipos ---
        interface Service {
            name: string;
            status: "operational" | "degraded" | "down";
            latency: string;
        }

        interface StatusResponse {
            status: string;
            last_updated: string;
            services: Service[];
        }

        // ⚠️ REEMPLAZA CON TU URL CORRECTA (TUNNEL O LOCALHOST)
        const STATUS_API_URL = "http://localhost:5678/webhook/system-status";

        // --- 2. Referencias al DOM ---
        const autoSwitch = document.getElementById(
            "auto-switch",
        ) as HTMLInputElement;
        const refreshBtn = document.getElementById(
            "refresh-btn",
        ) as HTMLButtonElement;
        const refreshIcon = document.getElementById("refresh-icon");
        const autoBadge = document.getElementById("auto-badge");

        const globalCard = document.getElementById("global-status-card");
        const globalTitle = document.getElementById("global-title");
        const globalIcon = document.getElementById("global-icon");
        const lastUpdated = document.getElementById("last-updated");
        const servicesList = document.getElementById("services-list");

        // Variable para guardar el intervalo del temporizador
        let autoInterval: number | undefined;

        // --- 3. Lógica Principal ---

        async function fetchStatus() {
            if (
                !globalCard ||
                !globalTitle ||
                !globalIcon ||
                !lastUpdated ||
                !servicesList
            )
                return;

            // Estado visual de "Cargando"
            refreshBtn.disabled = true;
            refreshIcon?.classList.add("animate-spin");
            globalCard.classList.add("opacity-70"); // Feedback visual sutil

            try {
                const response = await fetch(STATUS_API_URL);
                if (!response.ok) throw new Error("Network error");

                const data = (await response.json()) as StatusResponse;

                // Actualizar UI Global
                globalCard.classList.remove("opacity-70");

                if (data.status === "operational") {
                    globalTitle.textContent = "Todos los sistemas operativos";
                    globalTitle.className = "text-xl font-bold text-green-700";
                    globalIcon.className =
                        "w-12 h-12 rounded-full bg-green-100 flex items-center justify-center transition-colors duration-300";
                    globalIcon.innerHTML = `<svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>`;
                } else {
                    globalTitle.textContent =
                        "Degradación de servicio detectada";
                    globalTitle.className = "text-xl font-bold text-yellow-700";
                    globalIcon.className =
                        "w-12 h-12 rounded-full bg-yellow-100 flex items-center justify-center transition-colors duration-300";
                    globalIcon.innerHTML = `<svg class="w-6 h-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>`;
                }

                // Hora actual
                const now = new Date();
                lastUpdated.textContent = `Actualizado: ${now.toLocaleTimeString()}`;

                // Renderizar Servicios
                servicesList.innerHTML = data.services
                    .map(
                        (service) => `
                    <div class="px-6 py-4 flex items-center justify-between hover:bg-slate-50 transition-colors animate-fade-in">
                        <div class="flex items-center gap-3">
                            <div class="relative flex h-3 w-3">
                            <span class="${service.status === "operational" ? "bg-green-400" : "bg-red-400"} animate-ping absolute inline-flex h-full w-full rounded-full opacity-75"></span>
                            <span class="${service.status === "operational" ? "bg-green-500" : "bg-red-500"} relative inline-flex rounded-full h-3 w-3"></span>
                            </div>
                            <span class="font-medium text-slate-700">${service.name}</span>
                        </div>
                        <div class="flex items-center gap-4">
                            <span class="text-xs font-mono text-slate-400">${service.latency}</span>
                            <span class="px-2 py-1 rounded-full text-xs font-bold ${
                                service.status === "operational"
                                    ? "bg-green-100 text-green-700"
                                    : "bg-red-100 text-red-700"
                            }">
                                ${service.status === "operational" ? "OPERATIVO" : "ERROR"}
                            </span>
                        </div>
                    </div>
                `,
                    )
                    .join("");
            } catch (error) {
                console.error(error);
                globalTitle.textContent = "Error de conexión con el monitor";
                globalTitle.className = "text-xl font-bold text-red-600";
                servicesList.innerHTML = `<div class="p-6 text-center text-red-400">No se pudo obtener datos de n8n.</div>`;
            } finally {
                // Restaurar botón (solo si estamos en modo manual)
                refreshIcon?.classList.remove("animate-spin");
                if (!autoSwitch.checked) {
                    refreshBtn.disabled = false;
                }
            }
        }

        // --- 4. Manejo del Interruptor (Switch) ---
        function handleModeChange() {
            if (autoSwitch.checked) {
                // MODO AUTOMÁTICO
                refreshBtn.disabled = true; // Desactivar botón manual
                refreshBtn.classList.add("opacity-50", "cursor-not-allowed");
                refreshBtn.innerHTML = `<span>Sincronizando...</span>`; // Feedback textual
                autoBadge?.classList.remove("hidden");

                // Iniciar intervalo (cada 5 segundos)
                fetchStatus(); // Llamada inmediata
                autoInterval = window.setInterval(fetchStatus, 10000);
            } else {
                // MODO MANUAL
                refreshBtn.disabled = false; // Activar botón manual
                refreshBtn.classList.remove("opacity-50", "cursor-not-allowed");
                refreshBtn.innerHTML = `
                    <svg id="refresh-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><path d="M3 3v5h5"/><path d="M3 12a9 9 0 0 0 9 9 9.75 9.75 0 0 0 6.74-2.74L21 16"/><path d="M16 16h5v5"/></svg>
                    <span>Actualizar Ahora</span>
                `;
                autoBadge?.classList.add("hidden");

                // Limpiar intervalo
                if (autoInterval) clearInterval(autoInterval);
            }
        }

        // Listeners
        autoSwitch.addEventListener("change", handleModeChange);
        refreshBtn.addEventListener("click", () => fetchStatus());

        // Carga inicial
        fetchStatus();
    </script>
</Layout>
